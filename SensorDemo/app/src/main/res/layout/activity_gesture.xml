<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:textSize="20dp"
              android:textColor="#000"
              android:text="DEMO FOR  Gesture"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:layout_gravity="center"
              android:text="Linear Layout with button"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:layout_gravity="center"
              android:id="@+id/tvTouchEvent"
              android:text="TOUCH EVENT"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:layout_gravity="center"
              android:textColor="#000"
              android:text="===================Start of linear layout==============="/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="250dp"
    android:id="@+id/linerLayout">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Click here"
        android:id="@+id/btnCLicking"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:layout_gravity="center"
              android:textColor="#000"
              android:text="===================End of linear layout==============="/>


</LinearLayout>